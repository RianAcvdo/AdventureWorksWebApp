@model IEnumerable<AdventureWorksWebApp.Models.Photo>

@{
    ViewBag.Title = "Carousel";
}

<h2>Carousel</h2>

<p>
    @if (@ViewBag.Username != null)
    {
        @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
    }
</p>


<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">


        @if (Model != null)
        {
            <div class="carousel-item active">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.FirstOrDefault().PhotoFile)" class="d-block w-100 carousel-imagen-uniforme" alt="...">
            </div>

            foreach (var item in Model.Skip(1))
            {
                <div class="carousel-item">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.PhotoFile)" class="d-block w-100 carousel-imagen-uniforme" alt="@item.Description">
                </div>
            }
        }

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>