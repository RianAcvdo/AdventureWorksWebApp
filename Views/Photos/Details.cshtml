@model AdventureWorksWebApp.Models.Photo

@{
    ViewBag.Title = "Details";
}



<div class="row m-2">
    <h2>Photo Details</h2>

    <div class="mb-4">
        @Html.ActionLink("Edit", "Edit", new { id = Model.PhotoID }, new { @class = "btn btn-warning"})
        @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-secondary" })
    </div>

    <div class="card">
        <div class="card-body">
            <div class="mb-2">
                <span class="fw-bold">Title</span>
                <p>@Html.DisplayFor(model => model.Title)</p>
            </div>

            <div class="mb-2">
                <span class="fw-bold">Description</span>
                <p>@Html.DisplayFor(model => model.Description)</p>
            </div>

            <div>
                <span class="fw-bold">Photo file</span>

                <figure class="figure col-12">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.PhotoFile)" width="850" height="850" class="figure-img img-fluid rounded" alt="photo - @Model.PhotoID">
                </figure>
            </div>
        </div>
        <!-- Comments section -->
        <div class="mx-4 pt-2 pb-4">
            <h4>Comments</h4>
            @if (Model.Comment.Count > 0)
            {
                foreach (var item in Model.Comment)
                {
                    <dl>
                        <dd>From: @item.User</dd>
                        <dd>Subject: @item.Subject</dd>
                        <dd>@item.Body</dd>

                        @Html.ActionLink("Delete", "Delete", "Comments", new { id = item.CommentID }, new { })
                    </dl>
                }
            }
            else
            {
                <span class="text-muted">No comments has been added yet.</span>
            }
        </div>
        @Html.ActionLink("Add Comment", "NewComment", "Comments", new { id = Model.PhotoID }, new { @class = "btn btn-outline-secondary" })

    </div>
    
</div>

